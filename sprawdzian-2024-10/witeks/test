plik = open('plik.txt', 'r')
zawartosc = plik.read()
def dziesietny_na_binarny_manualnie(zawartosc):
    wynik = ''
    while zawartosc > 0:
        wynik = str(zawartosc % 2) + wynik
        zawartosc //= 2
    return wynik

liczba = 30
print(dziesietny_na_binarny_manualnie(zawartosc))



zad2 


with open("tekst.txt", "r", encoding="utf-8") as file:
    content = file.read()

words = [word for word in content.split() if len(word) > 3 and word[0].isupper()]
with open("analiza.txt", "w", encoding="utf-8") as file:
    for word in words:
        file.write(word + "\n")




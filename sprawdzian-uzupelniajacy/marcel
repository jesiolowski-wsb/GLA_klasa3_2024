def sprawdz_pierwszosc(n):
    if n < 2:
        return False
    for i in range(2, int(n**0.5) + 1):
        if n % i == 0:
            return False
    return True
b)
def dec_na_bin(liczba):
    if liczba == 0:
        return "0"
    binarna = ""
    while liczba > 0:
        binarna = str(liczba % 2) + binarna
        liczba //= 2
    return binarna

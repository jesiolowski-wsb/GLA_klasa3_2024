zad4





dane  = open('dane.txt', 'r')
lines = dane.readlines()
dane.close()
dec_d = [str(int(l, base=2)) for l in lines if int(l, base=2)%2==0]
dane = open('wyniki.txt', 'w')
dane.write('\n'.join(dec_d))
dane.close()
